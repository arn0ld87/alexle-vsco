---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title = 'Alexander Schneider', description = 'ITâ€‘Systemintegration & DevOps in Leipzig' } = Astro.props;
---
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-gray-950 text-gray-100 font-sans">
    <Header />
    <slot />
    <Footer />
    <script is:inline>
      (() => {
        const prefix = '/dist';
        const { pathname } = window.location;
        if (!pathname.startsWith(prefix)) return;

        const rewriteAttr = (selector, attr) => {
          document.querySelectorAll(selector).forEach((el) => {
            const value = el.getAttribute(attr);
            if (!value || value.startsWith('//') || value.startsWith(prefix + '/')) return;
            if (value.startsWith('/')) {
              el.setAttribute(attr, prefix + value);
            }
          });
        };

        rewriteAttr('a[href^="/"]', 'href');
        rewriteAttr('img[src^="/"]', 'src');
        rewriteAttr('source[src^="/"]', 'src');
        rewriteAttr('video[src^="/"]', 'src');
        rewriteAttr('link[href^="/"]', 'href');
        rewriteAttr('form[action^="/"]', 'action');
      })();
    </script>
  </body>
</html>
