---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '../components/Analytics.astro';
import ThemeLoader from '../components/ThemeLoader.astro';

const GA_ID = 'G-MWDF3CGRHL';
const {
  title = 'Alexander Schneider',
  description = 'ITâ€‘Systemintegration & DevOps in Leipzig',
  ogImage = '/media/alex-gemini.png'
} = Astro.props;

const canonical = Astro.site
  ? new URL(Astro.url.pathname.replace(/index\.html?$/, ''), Astro.site).href
  : undefined;

const absoluteOgImage = ogImage.startsWith('http')
  ? ogImage
  : Astro.site
    ? new URL(ogImage, Astro.site).href
    : ogImage;
---
<html lang="de">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    {canonical && <link rel="canonical" href={canonical} />}
    <meta property="og:site_name" content="Alexander Schneider" />
    <meta property="og:type" content="website" />
    {canonical && <meta property="og:url" content={canonical} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={absoluteOgImage} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={absoluteOgImage} />
    <ThemeLoader />
    {import.meta.env.PROD && (
      <>
        <script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
        <script is:inline>
          {`window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', '${GA_ID}');`}
        </script>
      </>
    )}
  </head>
  <body class="min-h-screen bg-gray-950 text-gray-100 font-sans dark:bg-gray-950 dark:text-gray-100 light:bg-gray-50 light:text-gray-900">
    <Header />
    <slot />
    <Footer />
    <Analytics />
    <script is:inline>
      (() => {
        const prefix = '/dist';
        const { pathname } = window.location;
        if (!pathname.startsWith(prefix)) return;

        const rewriteAttr = (selector, attr) => {
          document.querySelectorAll(selector).forEach((el) => {
            const value = el.getAttribute(attr);
            if (!value || value.startsWith('//') || value.startsWith(prefix + '/')) return;
            if (value.startsWith('/')) {
              el.setAttribute(attr, prefix + value);
            }
          });
        };

        rewriteAttr('a[href^="/"]', 'href');
        rewriteAttr('img[src^="/"]', 'src');
        rewriteAttr('source[src^="/"]', 'src');
        rewriteAttr('video[src^="/"]', 'src');
        rewriteAttr('link[href^="/"]', 'href');
        rewriteAttr('form[action^="/"]', 'action');
      })();
    </script>
  </body>
</html>
