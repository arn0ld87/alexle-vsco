---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="KI-Nachrichten Portal - Demo | alexle135"
  description="Live-Demo des automatisierten KI-Nachrichten Portals mit ML-Trends und AI-Entwicklungen"
>
  <div class="min-h-screen bg-gray-950 text-gray-100 font-sans dark:bg-gray-950 dark:text-gray-100 light:bg-gray-50 light:text-gray-900">
    <!-- Hero Section -->
    <div class="container mx-auto px-4 py-12">
      <div class="mb-16 text-center">
        <div class="mb-6">
          <div class="inline-flex items-center gap-3 rounded-full bg-blue-600/10 px-4 py-2 text-sm font-medium text-blue-400 dark:text-blue-400 light:text-blue-600">
            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            Live Demo
          </div>
        </div>
        <h1 class="mb-4 text-4xl font-bold tracking-tight text-white dark:text-white light:text-gray-900 sm:text-5xl">
          KI-Nachrichten Portal
        </h1>
        <p class="mx-auto max-w-2xl text-lg text-gray-300 dark:text-gray-300 light:text-gray-700">
          Automatisierte KI-News mit Machine-Learning-Trends und AI-Entwicklungen im Überblick
        </p>
      </div>

      <!-- Stats Section -->
      <div class="mb-16 grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <div class="card-glass p-6 light:card-glass">
          <div class="flex items-center gap-3">
            <div class="rounded-lg bg-blue-600/20 p-2">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-400 dark:text-gray-400 light:text-gray-600">Artikel heute</p>
              <p id="article-count" class="text-2xl font-bold text-white dark:text-white light:text-gray-900">-</p>
            </div>
          </div>
        </div>
        
        <div class="card-glass p-6 light:card-glass">
          <div class="flex items-center gap-3">
            <div class="rounded-lg bg-green-600/20 p-2">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-400 dark:text-gray-400 light:text-gray-600">Relevanz</p>
              <p class="text-2xl font-bold text-white dark:text-white light:text-gray-900">92%</p>
            </div>
          </div>
        </div>
        
        <div class="card-glass p-6 light:card-glass">
          <div class="flex items-center gap-3">
            <div class="rounded-lg bg-yellow-600/20 p-2">
              <svg class="h-6 w-6 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-400 dark:text-gray-400 light:text-gray-600">Ladezeit</p>
              <p class="text-2xl font-bold text-white dark:text-white light:text-gray-900">1.2s</p>
            </div>
          </div>
        </div>
        
        <div class="card-glass p-6 light:card-glass">
          <div class="flex items-center gap-3">
            <div class="rounded-lg bg-purple-600/20 p-2">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
              </svg>
            </div>
            <div>
              <p class="text-sm font-medium text-gray-400 dark:text-gray-400 light:text-gray-600">Engagement</p>
              <p class="text-2xl font-bold text-white dark:text-white light:text-gray-900">+40%</p>
            </div>
          </div>
        </div>
      </div>

      <!-- News Feed Section -->
      <div class="mb-16">
        <div class="mb-8 text-center">
          <h2 class="mb-4 text-3xl font-bold text-white dark:text-white light:text-gray-900">Aktuelle KI-Nachrichten</h2>
          <p class="text-gray-300 dark:text-gray-300 light:text-gray-700">
            Automatisch kuratierte Artikel aus 10+ führenden KI-Publikationen
          </p>
        </div>

        <div id="news-container" class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
          <!-- Loading State -->
          <div class="col-span-full text-center py-12">
            <div class="inline-flex items-center gap-3">
              <svg class="h-6 w-6 animate-spin text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
              <span class="text-gray-300 dark:text-gray-300 light:text-gray-700">Lade KI-Nachrichten...</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Architecture Section -->
      <div class="mb-16">
        <div class="card-glass p-8 light:card-glass">
          <h2 class="mb-6 text-2xl font-semibold text-white dark:text-white light:text-gray-900">System-Architektur</h2>
          <p class="mb-6 text-gray-300 dark:text-gray-300 light:text-gray-700">
            Automatisierte Content-Pipeline mit RSS-Scraping und intelligenter Filterung
          </p>
          
          <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
            <div class="text-center">
              <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-blue-600/20">
                <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
              </div>
              <h3 class="mb-2 font-semibold text-white dark:text-white light:text-gray-900">RSS-Scraping</h3>
              <p class="text-sm text-gray-300 dark:text-gray-300 light:text-gray-700">10+ RSS-Feeds mit automatischer Datenerfassung</p>
            </div>
            
            <div class="text-center">
              <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-green-600/20">
                <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                </svg>
              </div>
              <h3 class="mb-2 font-semibold text-white dark:text-white light:text-gray-900">Content-Filterung</h3>
              <p class="text-sm text-gray-300 dark:text-gray-300 light:text-gray-700">Keyword-basierte KI-Relevanz-Filterung</p>
            </div>
            
            <div class="text-center">
              <div class="mb-4 inline-flex h-12 w-12 items-center justify-center rounded-lg bg-purple-600/20">
                <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                </svg>
              </div>
              <h3 class="mb-2 font-semibold text-white dark:text-white light:text-gray-900">Live-Updates</h3>
              <p class="text-sm text-gray-300 dark:text-gray-300 light:text-gray-700">Echtzeit-Daten mit automatischer Aktualisierung</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Load KI news data
    async function loadKINews() {
      try {
        const response = await fetch('/api/ki-news');
        const data = await response.json();
        
        if (data.success && data.articles.length > 0) {
          updateNewsFeed(data.articles);
          updateStats(data);
        } else {
          showError('Keine Daten verfügbar');
        }
      } catch (error) {
        console.error('Error loading KI news:', error);
        showError('Fehler beim Laden der Daten');
      }
    }
    
    // Update news feed with real data
    function updateNewsFeed(articles) {
      const newsContainer = document.getElementById('news-container');
      if (!newsContainer) return;
      
      newsContainer.innerHTML = articles.slice(0, 6).map(article => `
        <article class="card-glass p-6 light:card-glass">
          <div class="mb-4 flex items-center gap-2">
            <span class="rounded-full bg-blue-600/20 px-3 py-1 text-xs font-medium text-blue-400">${article.category}</span>
            <span class="text-xs text-gray-400 dark:text-gray-400 light:text-gray-600">${formatTimeAgo(article.pubDate)}</span>
            ${article.language === 'de' ? '<span class="rounded-full bg-green-600/20 px-2 py-1 text-xs font-medium text-green-400">DE</span>' : ''}
          </div>
          
          ${article.thumbnail ? `
            <div class="mb-4">
              <img src="${article.thumbnail}" alt="${article.title}" class="w-full h-32 object-cover rounded-lg">
            </div>
          ` : ''}
          
          <h3 class="mb-3 text-lg font-semibold text-white dark:text-white light:text-gray-900">
            ${article.title}
          </h3>
          <p class="mb-4 text-sm text-gray-300 dark:text-gray-300 light:text-gray-700">
            ${article.description}
          </p>
          <div class="flex items-center justify-between">
            <span class="text-xs text-gray-400 dark:text-gray-400 light:text-gray-600">${article.source}</span>
            <button onclick="openArticle('${article.link}')" class="rounded bg-blue-600 px-3 py-1 text-xs font-medium text-white transition hover:bg-blue-500">
              Lesen
            </button>
          </div>
        </article>
      `).join('');
    }
    
    // Update stats with real data
    function updateStats(data) {
      const articleCount = document.getElementById('article-count');
      if (articleCount) {
        articleCount.textContent = data.count;
      }
    }
    
    // Show error message
    function showError(message) {
      const newsContainer = document.getElementById('news-container');
      if (newsContainer) {
        newsContainer.innerHTML = `
          <div class="col-span-full text-center py-12">
            <div class="text-red-400 mb-2">⚠️</div>
            <p class="text-gray-300 dark:text-gray-300 light:text-gray-700">${message}</p>
          </div>
        `;
      }
    }
    
    // Format time ago
    function formatTimeAgo(dateString) {
      const date = new Date(dateString);
      const now = new Date();
      const diffInHours = Math.floor((now - date) / (1000 * 60 * 60));
      
      if (diffInHours < 1) return 'vor wenigen Min';
      if (diffInHours < 24) return `vor ${diffInHours}h`;
      const diffInDays = Math.floor(diffInHours / 24);
      return `vor ${diffInDays}d`;
    }
    
    // Open article in new tab (global function)
    window.openArticle = function(url) {
      window.open(url, '_blank');
    }
    
    // Load data on page load
    document.addEventListener('DOMContentLoaded', () => {
      loadKINews();
      
      // Refresh data every 8 hours
      setInterval(loadKINews, 8 * 60 * 60 * 1000);
    });
  </script>
</BaseLayout>
