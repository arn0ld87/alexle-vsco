import ThemeToggle from './ThemeToggle.astro';

const links = [
  { href: '/', label: 'Start' },
  { href: '/#services', label: 'Leistungen' },
  { href: '/#skills', label: 'Kompetenzen' },
  { href: '/projekte/', label: 'Projekte' },
  { href: '/ki-agenten-lab/', label: 'KI-Lab' },
