<button
  id="theme-toggle"
  type="button"
  aria-label="Darstellung umschalten"
  class="rounded-lg p-2 text-gray-400 transition hover:bg-white/10 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-400"
>
  <svg id="theme-icon-dark" class="hidden h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
  </svg>
  <svg id="theme-icon-light" class="hidden h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
    <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
  </svg>
</button>

<script is:inline>
  const storageKey = 'theme';
  const root = document.documentElement;
  const applyTheme = (theme, icons) => {
    const isDark = theme === 'dark';
    root.classList.toggle('dark', isDark);
    icons.dark.classList.toggle('hidden', !isDark);
    icons.light.classList.toggle('hidden', isDark);
    try {
      localStorage.setItem(storageKey, theme);
    } catch (error) {
      /* ignore */
    }
  };
  const initToggle = () => {
    const button = document.getElementById('theme-toggle');
    const icons = {
      dark: document.getElementById('theme-icon-dark'),
      light: document.getElementById('theme-icon-light')
    };
    if (!button || !icons.dark || !icons.light) {
      return;
    }
    const currentTheme = root.classList.contains('dark') ? 'dark' : 'light';
    icons.dark.classList.toggle('hidden', currentTheme !== 'dark');
    icons.light.classList.toggle('hidden', currentTheme === 'dark');
    button.onclick = () => {
      const nextTheme = root.classList.contains('dark') ? 'light' : 'dark';
      applyTheme(nextTheme, icons);
    };
  };
  initToggle();
  document.addEventListener('astro:after-swap', initToggle);
  window.addEventListener('storage', (event) => {
    if (event.key === storageKey && typeof event.newValue === 'string') {
      const icons = {
        dark: document.getElementById('theme-icon-dark'),
        light: document.getElementById('theme-icon-light')
      };
      if (icons.dark && icons.light) {
        applyTheme(event.newValue, icons);
      }
    }
  });
</script>
